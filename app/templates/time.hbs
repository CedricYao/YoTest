<form class="form">
    <div class="form-group">
        Time Entry: {{input type=date value=selectedDate}}
    </div>
    <div class="form-group">
        <select id='company' {{action company_selected this on='change'}}>
            <option value="0"> -- Please select a company</option>
            {{#each company in model.companies}}
                <option value="{{unbound company.id}}">{{company.name}}</option>
            {{/each}}
        </select>
    </div>
    <div {{bind-attr class=":form-group isSowHidden:hidden"}}>
        <select id='sow' {{action sow_selected this on='change'}}>
            <option value="0"> -- Please select a SOW</option>
            {{#each sow in model.sows}}
                <option value="{{unbound sow.id}}">{{sow.name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="alert alert-info">
        <p>the selected date is: {{selectedDate}}</p>
        <p>the selected value is: {{selectedValue}}</p>
        <p>the IsSowHidden value is: {{isSowHidden}}</p>
    </div>
</form>